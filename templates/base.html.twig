<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="CRM for private company.">
        <meta name="keywords" content="CRM, admin panel, crm, contacts, calendar">
        <meta name="author" content="Karla Gergelova">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">

        <title>{% block title %}CRM{% endblock %}</title>

        <!-- Favicon -->
        <link rel="shortcut icon" href="{{ asset('images/crm-logo.svg') }}">
        <link rel="icon" type="image/svg" sizes="150x150" href="{{ asset('images/crm-logo.svg') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
                <!-- Start css -->
                <!-- Switchery css -->
                <link href="{{ asset('plugins/switchery/switchery.min.css') }}" rel="stylesheet">
                <!-- Slick css -->
                <link href="{{ asset('plugins/slick/slick.css') }}" rel="stylesheet">
                <link href="{{ asset('plugins/slick/slick-theme.css') }}" rel="stylesheet">
                <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
                <link href="{{ asset('css/icons.css') }}" rel="stylesheet" type="text/css">
                <link href="{{ asset('css/flag-icon.min.css') }}" rel="stylesheet" type="text/css">
                <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css">
                <link href="{{ asset('css/perso.css') }}" rel="stylesheet" type="text/css">
                <!-- End css -->
        {% endblock %}

    </head>

    <body class="vertical-layout">

        <!-- Start Containerbar -->
        <div id="containerbar">
            
                {% block body %}

                {% endblock %}

            </div>
            <!-- End Rightbar -->
        </div>
        <!-- End Containerbar -->

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
             <!-- Start js -->        
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/popper.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            {# <script src="{{ asset('js/modernizr.min.js') }}"></script> #}
            <script src="{{ asset('js/detect.js') }}"></script>
            <script src="{{ asset('js/jquery.slimscroll.js') }}"></script>
            <script src="{{ asset('js/vertical-menu.js') }}"></script>
            <!-- Slick js -->
            <script src="{{ asset('plugins/slick/slick.min.js') }}"></script>
            <!-- Core js -->
            <script src="{{ asset('js/core.js') }}"></script>
            <!-- End js -->
        {% endblock %}

    </body>
</html>
